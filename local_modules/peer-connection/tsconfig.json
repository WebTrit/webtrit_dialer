{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": "./src",
		"declaration": true,
		"declarationMap": true,
		"skipLibCheck": true,
		"outDir": "build",
		"preserveConstEnums": true,
	},
	"include": [
    	"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		".vscode"
	]
}
